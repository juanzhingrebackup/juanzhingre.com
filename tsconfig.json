{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "incremental": true,
        "target": "ES2017",
        "module": "esnext",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        ".next/dev/types/**/*.ts",
        ".next/types/**/*.ts",
        "next-env.d.ts",
        "**/*.tsx",
        "**/*.ts",
        "**/*.mts"
    ],
    "exclude": ["node_modules"],
}
